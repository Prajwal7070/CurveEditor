{
  "$schema": "http://json-schema.org/draft-04/schema",
  "definitions": {
    "TcHmi.Controls.ParisonFramework.ParisonFrameworkControl": {
      "type": "object",
      "frameworkInstanceOf": "TcHmi.Controls.System.TcHmiControl",
      "frameworkControlType": "ParisonFrameworkControl",
      "frameworkControlNamespace": "TcHmi.Controls.ParisonFramework",
      "properties": {
        "data-tchmi-diegeometry": {
          "description": "Selects the die geometry mode (PinMove or DieMove).",
          "$ref": "#/definitions/DieGeometryMode",
          "default": "PinMove"
        },
        "data-tchmi-visualbasicthickness": {
          "description": "Controls the visual thickness of the basic layer band.",
          "$ref": "#/definitions/ParisonThickness",
          "default": 3.0
        },
        "data-tchmi-minvisualbasicthickness": {
          "description": "Minimum allowed visual thickness for the basic band (safety clamp).",
          "$ref": "#/definitions/ParisonThickness",
          "default": 1.0
        },
        "data-tchmi-spoolcorethickness": {
          "description": "Thickness of the spool core tube wall.",
          "$ref": "#/definitions/ParisonThickness",
          "default": 2.0
        },
        "data-tchmi-spoolcoreinner": {
          "description": "Inner radius of the hollow spool core.",
          "$ref": "#/definitions/ParisonRadius",
          "default": 5.0
        }
      }
    },
    "DieGeometryMode": {
      "$schema": "http://json-schema.org/draft-04/schema",
      "title": "Die Geometry Mode",
      "description": "Defines available die geometry modes.",
      "type": "string",
      "enum": [
        "PinMove",
        "DieMove"
      ]
    },
    "ParisonThickness": {
      "$schema": "http://json-schema.org/draft-04/schema",
      "title": "Parison Thickness",
      "description": "Thickness value (mm) for parison layers.",
      "type": "number",
      "minimum": 0,
      "maximum": 50,
      "default": 1.0
    },
    "ParisonRadius": {
      "$schema": "http://json-schema.org/draft-04/schema",
      "title": "Parison Radius",
      "description": "Radius value (mm) for parison core or outer bounds.",
      "type": "number",
      "minimum": 0,
      "maximum": 200,
      "default": 5.0
    }
  }
}
